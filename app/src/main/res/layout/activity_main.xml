<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication22.MainActivity"
    android:background="@color/material_grey_300">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start NormalActivity"
        android:id="@+id/send_request"
        android:layout_marginTop="38dp"
        android:background="#bdca07"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start dialogactivity"
        android:id="@+id/button2"
        android:background="#1ab00f"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/send_request"
        android:layout_alignEnd="@+id/send_request" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button3"
        android:background="#bc2d0d"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/send_request" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button4"
        android:background="#0dbab2"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web1"
        android:id="@+id/button5"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginEnd="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web2"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignStart="@+id/button4" />

</RelativeLayout>
