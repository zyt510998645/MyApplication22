<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication22.MainActivity"
    android:background="@android:color/holo_blue_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal&amp;Video"
        android:id="@+id/send_request"
        android:background="#bdca07"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog&amp;Music"
        android:id="@+id/button2"
        android:background="#1ab00f"
        android:layout_alignTop="@+id/send_request"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send&amp;GPS"
        android:id="@+id/button3"
        android:background="#bc2d0d"
        android:layout_below="@+id/send_request"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button4"
        android:background="#0dbab2"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:contextClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web1"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web2"
        android:id="@+id/button6"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/button7"
        android:background="#343cdd"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
